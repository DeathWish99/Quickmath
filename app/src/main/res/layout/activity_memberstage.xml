<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MemberStageActivity">

    <Button
        android:id="@+id/btn_setting"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_dehaze_black_24dp"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/tv_stage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/stage"
        android:textColor="@color/colorBlack"
        android:textSize="35sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_margin="30dp">

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scores"
            android:textColor="@color/colorBlack" />
        <TextView
            android:id="@+id/tv_score1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"/>

    </LinearLayout>


    <Button
        android:id="@+id/stage_1"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@id/tv_stage"
        android:background="@drawable/button_bg_round"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:text="1"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/stage_2"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@id/tv_stage"
        android:background="@drawable/button_bg_round"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="110dp"
        android:text="2"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/stage_3"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@id/tv_stage"
        android:background="@drawable/button_bg_round"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="110dp"
        android:text="3"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/stage_4"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@id/tv_stage"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_bg_round"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:text="4"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/stage_5"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@id/stage_1"
        android:background="@drawable/button_bg_round"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:text="5"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/stage_6"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@id/stage_1"
        android:background="@drawable/button_bg_round"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="110dp"
        android:text="6"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/stage_7"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@id/stage_1"
        android:background="@drawable/button_bg_round"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="110dp"
        android:text="7"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/stage_8"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@id/stage_1"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_bg_round"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:text="8"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/txt_score"
        android:layout_width="95dp"
        android:layout_height="44dp"
        android:layout_alignRight="@+id/tv_stage"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-36dp"
        android:layout_marginBottom="108dp"
        android:contentDescription="Score"
        android:text="@string/score"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/tv_level"
        android:layout_width="95dp"
        android:layout_height="44dp"
        android:layout_alignRight="@+id/tv_stage"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-37dp"
        android:layout_marginBottom="65dp"
        android:contentDescription="Score"
        android:text="@string/level"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="124dp"
        android:layout_height="119dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="46dp"
        android:layout_marginBottom="51dp"
        android:background="@drawable/button_bg_round"
        app:srcCompat="@drawable/button_bg_round" />

</RelativeLayout>