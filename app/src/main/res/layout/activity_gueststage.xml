<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuestStageActivity">

    <TextView
        android:id="@+id/tv_stage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="113dp"
        android:layout_marginRight="113dp"
        android:text="Stage"
        android:textColor="@color/colorBlack"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btn_stage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/tv_stage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_bg_round" />

    <Button
        android:id="@+id/btn_setting"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_dehaze_black_24dp"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/txt_score"
        android:layout_width="95dp"
        android:layout_height="44dp"
        android:layout_alignEnd="@+id/tv_stage"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-36dp"
        android:layout_marginBottom="108dp"
        android:contentDescription="Score"
        android:text="Score"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/txt_level"
        android:layout_width="95dp"
        android:layout_height="44dp"
        android:layout_alignEnd="@+id/tv_stage"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-37dp"
        android:layout_marginBottom="65dp"
        android:contentDescription="Score"
        android:text="Level"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="124dp"
        android:layout_height="119dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-56dp"
        android:layout_marginBottom="51dp"
        android:layout_toStartOf="@+id/btn_stage"
        android:background="@drawable/button_bg_round"
        app:srcCompat="@drawable/button_bg_round" />

    <ImageView
        android:id="@+id/play_btn"
        android:layout_width="80dp"
        android:layout_height="99dp"
        android:layout_alignStart="@+id/btn_stage"
        android:layout_alignLeft="@+id/btn_stage"
        android:layout_alignEnd="@+id/btn_stage"
        android:layout_alignRight="@+id/btn_stage"
        android:layout_alignBottom="@+id/btn_stage"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="51dp"
        android:elevation="5dp"
        app:srcCompat="@android:drawable/ic_media_play" />

</RelativeLayout>