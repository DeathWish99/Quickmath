<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LanguageActivity">

    <TextView
        android:id="@+id/tv_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:text="@string/language"
        android:textColor="@color/colorBlack"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_english"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_language"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/english" />

    <Button
        android:id="@+id/btn_indo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_english"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/indonesian" />

    <Button
        android:id="@+id/btn_jpn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_english"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="108dp"
        android:text="@string/japan" />

    <Button
        android:id="@+id/btn_korea"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_english"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="184dp"
        android:text="@string/korean" />

</RelativeLayout>